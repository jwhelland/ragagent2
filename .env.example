# ragagent2 Environment Configuration
# Use this file for Infrastructure (where things are) and Secrets (credentials).
# For application behavior (models, chunking, thresholds), use config/config.yaml.

# --- Infrastructure & Secrets ---

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=ragagent2024
NEO4J_DATABASE=neo4j

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_HTTPS=false

# LLM API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# --- LLM Section Overrides ---
# These overrides map to the 'llm' section in config.yaml.
# Format: LLM__[SECTION]__[KEY]

# Default overrides (applied to all if not specified)
# LLM__DEFAULTS__PROVIDER=openai
# LLM__DEFAULTS__BASE_URL=https://api.openai.com/v1
# LLM__DEFAULTS__MODEL=gpt-4.1-mini

# Extraction overrides
# LLM__EXTRACTION__MODEL=openai/gpt-oss-20b

# Rewriting overrides
# LLM__REWRITING__MODEL=gpt-4.1-mini

# Chat/Query overrides
# LLM__CHAT__MODEL=gpt-4o

# --- System Overrides (Optional) ---
# LOGGING__LEVEL=INFO
# DATABASE__EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
