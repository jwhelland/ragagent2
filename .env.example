# Database Configuration
# These are mapped via custom logic, but can also be set explicitly if needed
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=ragagent2024
NEO4J_DATABASE=neo4j

QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_HTTPS=false

# Global Defaults (Used if specific sections aren't overridden)
LLM_PROVIDER=openai
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Explicit Component Overrides
# Use double underscores to map to nested config sections
# Example: Configuring Extraction LLM specifically
# EXTRACTION__LLM__PROVIDER=openai
# EXTRACTION__LLM__MODEL=gpt-4.0
# EXTRACTION__LLM__TEMPERATURE=0.0

# Example: Configuring Text Rewriting LLM specifically
# INGESTION__TEXT_REWRITING__LLM__PROVIDER=anthropic
# INGESTION__TEXT_REWRITING__LLM__MODEL=claude-3-5-sonnet-20241022

# Embedding Configuration
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32

# Pipeline Configuration
BATCH_SIZE=10
MAX_CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_WORKERS=4

# Extraction Configuration
CONFIDENCE_THRESHOLD=0.7
MIN_MENTION_COUNT=2
AUTO_MERGE_THRESHOLD=0.95

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ragagent2.log

# Data Paths
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
ENTITIES_DATA_PATH=data/entities
NORMALIZATION_DATA_PATH=data/normalization

# OCR Configuration
OCR_ENABLED=true
OCR_LANGUAGES=eng